<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.dwohco.poly_guide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait"
            android:configChanges="locale"/>
        <activity
            android:name=".InfoActivity"
            android:label="@string/info_name"
            android:screenOrientation="portrait"
            android:configChanges="locale"/>
        <activity
            android:name=".InfoSocialActivity"
            android:label="@string/help"
            android:screenOrientation="portrait"
            android:configChanges="locale"/>
        <activity
            android:name=".ConcreteInfoSocialActivity"
            android:label="@string/help"
            android:configChanges="locale"/>
        <activity
            android:name=".SocialHelpActivity"
            android:label="@string/support"
            android:screenOrientation="portrait"
            android:configChanges="locale"/>
        <activity
            android:name=".InfoForeignerActivity"
            android:label="@string/foreign_students"
            android:screenOrientation="portrait"
            android:configChanges="locale"/>
        <activity android:name=".SettingsActivity">
            android:configChanges="locale"
        </activity>
    </application>

</manifest>